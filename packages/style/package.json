{
    "name": "@coveord/plasma-style",
    "version": "52.12.1",
    "description": "Yet another CSS framework - but it's awesome & built by Coveo.",
    "keywords": [
        "coveo",
        "styleguide",
        "css",
        "front-end",
        "web"
    ],
    "homepage": "https://plasma.coveo.com/",
    "repository": {
        "type": "git",
        "url": "https://github.com/coveo/plasma.git"
    },
    "license": "Apache-2.0",
    "author": "Coveo",
    "main": "dist/PlasmaStyle.umd.js",
    "module": "dist/PlasmaStyle.mjs",
    "types": "index.d.ts",
    "files": [
        "dist",
        "gulpTasks",
        "scss/**/*.scss",
        "lib",
        "resources",
        "gulpfile.js",
        "LICENSE",
        "index.d.ts",
        "SvgName.d.ts"
    ],
    "scripts": {
        "build": "gulp clean && gulp && vite build",
        "clean": "gulp clean",
        "lintfix": "../../node_modules/.bin/stylelint --fix \"**/*.scss\" && ../../node_modules/.bin/prettier --write \"**/*.{scss,js,json,md,yml,html}\" && ../../node_modules/.bin/eslint -c ./.eslintrc.js \"**/*.js\" --fix",
        "prepublishOnly": "publint",
        "start": "concurrently \"gulp watch\" \"vite build --watch\""
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard-scss"
        ],
        "rules": {
            "selector-class-pattern": null,
            "no-descending-specificity": null,
            "scss/at-extend-no-missing-placeholder": null,
            "no-duplicate-selectors": null,
            "selector-pseudo-class-no-unknown": null,
            "no-invalid-position-at-import-rule": null,
            "keyframes-name-pattern": null,
            "scss/at-function-pattern": null,
            "scss/at-mixin-pattern": null,
            "scss/no-global-function-names": null,
            "scss/dollar-variable-pattern": null,
            "scss/operator-no-newline-after": null
        }
    },
    "dependencies": {
        "codemirror": "5.59.4",
        "rc-slider": "8.7.1",
        "react-diff-view": "2.6.0"
    },
    "devDependencies": {
        "@csstools/postcss-sass": "5.0.1",
        "ansi-colors": "4.1.3",
        "concurrently": "8.2.0",
        "coveo-png-sprite": "1.0.1",
        "del": "7.0.0",
        "fancy-log": "2.0.0",
        "gulp": "4.0.2",
        "gulp-cheerio": "1.0.0",
        "gulp-concat": "2.6.1",
        "gulp-files-to-json": "0.2.1",
        "gulp-gzip": "1.4.2",
        "gulp-if": "3.0.0",
        "gulp-rename": "2.0.0",
        "gulp-svgmin": "3.0.0",
        "gulp-uglify": "3.0.2",
        "jquery": "3.7.0",
        "lint-staged": "9.5.0",
        "merge-stream": "2.0.0",
        "minimist": "1.2.8",
        "postcss": "8.4.27",
        "publint": "0.1.16",
        "rimraf": "5.0.1",
        "sass": "1.63.6",
        "underscore": "1.13.1",
        "underscore.string": "3.3.6",
        "vite": "4.4.7"
    }
}
