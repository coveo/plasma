{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2020",
        "jsx": "react-jsx",
        "lib": ["ES2020", "DOM"],

        "composite": false,
        "incremental": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        "allowJs": true,
        "skipLibCheck": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictBindCallApply": true,

        "experimentalDecorators": true,
        "downlevelIteration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,
        "importHelpers": true
    }
}
