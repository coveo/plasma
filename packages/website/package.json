{
    "name": "@coveord/plasma-website",
    "version": "37.0.3",
    "private": true,
    "description": "Plasma Design System",
    "main": "src/Index.ts",
    "scripts": {
        "start": "concurrently \"tsc --noEmit --watch\" \"webpack serve\"",
        "build": "concurrently \"tsc --noEmit\" \"webpack\"",
        "precommit": "lint-staged",
        "snyk-protect": "npx snyk protect",
        "prepublish": "npm run snyk-protect",
        "clean": "rimraf dist built",
        "lintfix": "../../node_modules/.bin/stylelint --fix \"**/*.scss\" && ../../node_modules/.bin/prettier --write \"**/*.{scss,ts,tsx,js,jsx,json,md,yml,html}\" && ../../node_modules/.bin/eslint -c ./.eslintrc.js \"src/**/*.{ts,tsx}\" --fix"
    },
    "author": "Coveo",
    "license": "Apache-2.0",
    "homepage": "https://plasma.coveo.com/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/coveo/plasma.git"
    },
    "dependencies": {
        "@coveo/headless": "^1.32.0",
        "@coveord/plasma-react": "^37.0.3",
        "@coveord/plasma-style": "^37.0.3",
        "@types/lz-string": "1.3.34",
