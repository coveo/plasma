        "react-markdown": "7.1.1",
        "react-redux": "7.2.6",
        "react-router": "6.0.2",
        "react-router-dom": "6.0.2",
        "react-syntax-highlighter": "15.4.5",
        "redux": "4.1.2",
        "redux-devtools-extension": "2.13.9",
        "redux-promise-middleware": "6.1.2",
