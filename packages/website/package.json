    "lint-staged": {
        "**/*.scss": [
            "stylelint --fix",
            "prettier --write",
            "git add"
        ],
        "**/*.{ts,tsx}": [
            "prettier --write",
            "eslint -c ./.eslintrc.js --fix",
            "git add"
        ],
        "**/*.{js,jsx,json,md,yml,html}": [
            "prettier --write",
            "git add"
        ]
    },
    "snyk": true
}
