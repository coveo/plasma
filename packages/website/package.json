        "monaco-editor": "0.27.0",
        "next": "12.1.0",
        "next-fonts": "1.5.1",
        "next-images": "1.8.4",
        "next-sitemap": "2.5.4",
        "react": "16.14.0",
        "react-dom": "16.14.0",
        "react-markdown": "7.1.1",
        "react-redux": "7.2.6",
        "react-router": "6.0.2",
        "react-router-dom": "6.0.2",
        "react-syntax-highlighter": "15.4.5",
        "redux": "4.1.2",
        "redux-devtools-extension": "2.13.9",
        "redux-promise-middleware": "6.1.2",
