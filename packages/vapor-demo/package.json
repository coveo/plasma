{
    "name": "vapor-demo",
    "private": true,
    "version": "4.1.0",
    "description": "Demo page for the vapor components.",
    "keywords": [
        "coveo",
        "styleguide",
        "css",
        "front-end",
        "web"
    ],
    "homepage": "http://vapor.surge.sh/",
    "author": "Coveo",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/coveo/react-vapor.git"
    },
    "scripts": {
        "start": "next dev",
        "docs": "next build && next export",
        "lintfix": "prettier --write './*.@(json|yml|js|md)' './scss/**/*.scss' './resources/js/**/*.js'"
    },
    "devDependencies": {
        "@zeit/next-sass": "1.0.1",
        "acorn": "^6.0.0",
        "coveo-styleguide": "^4.1.0",
        "file-loader": "4.0.0",
        "husky": "2.3.0",
        "lint-staged": "8.1.7",
        "next": "8.1.0",
        "next-react-svg": "1.1.0",
        "node-sass": "4.12.0",
        "prettier": "1.17.1",
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "react-syntax-highlighter": "10.3.0",
        "resolve-url-loader": "3.1.0",
        "sass-loader": "7.1.0",
        "style-loader": "0.23.1"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "arrowParens": "always"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,scss,json,md,yml}": [
            "npm run lintfix",
            "git add"
        ]
    }
}
