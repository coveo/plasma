{
    "name": "@coveord/plasma-tokens",
    "version": "48.25.0",
    "description": "Design tokens of the Plasma Design System",
    "homepage": "https://github.com/coveo/plasma/packages/tokens#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/coveo/plasma.git",
        "directory": "packages/tokens"
    },
    "license": "Apache-2.0",
    "type": "module",
    "engines": {
        "node": ">=14.16"
    },
    "exports": {
        ".": {
            "types": "./dist/definitions/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "main": "./dist/cjs/index.js",
    "types": "./dist/definitions/index.d.ts",
    "files": [
        "dist",
        "icons",
        "scss",
        "css"
    ],
    "scripts": {
        "build": "rimraf dist && node ../../scripts/build",
        "tokens:build": "ts-node ./bin/build.ts --project ./bin/tsconfig.json && pnpm tokens:lint",
        "tokens:fetch": "ts-node -r dotenv-safe/config --project ./bin/tsconfig.json ./bin/fetch.ts",
        "tokens:lint": "prettier --write \"{src,scss,data}/*.{css,scss,ts,tsx,json}\""
    },
    "devDependencies": {
        "@swc/cli": "0.1.57",
        "@swc/core": "1.3.22",
        "@types/chroma-js": "2.1.4",
        "@types/fs-extra": "11.0.1",
        "@types/lodash-es": "4.17.6",
        "@types/node": "16.11.32",
        "@types/rimraf": "3.0.2",
        "@types/svgo": "2.6.3",
        "chroma-js": "2.4.2",
        "commander": "9.2.0",
        "cross-fetch": "3.1.5",
        "dotenv-safe": "8.2.0",
        "figma-js": "1.16.0",
        "fs-extra": "11.1.0",
        "lint-staged": "9.5.0",
        "lodash-es": "4.17.21",
        "prettier": "2.4.1",
        "rimraf": "3.0.2",
        "sass": "1.51.0",
        "svgo": "2.8.0",
        "ts-node": "10.9.1",
        "tslib": "2.4.1",
        "typescript": "4.9.4"
    },
    "dependencies": {
        "@swc/helpers": "0.4.12"
    }
}
