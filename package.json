{
    "name": "root",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "setup": "pnpm install",
        "start": "pnpm build --stream --filter @coveord/plasma-style && pnpm --recursive start --parallel --filter @coveord/plasma-style --filter @coveord/plasma-website",
        "test": "pnpm --recursive test",
        "test:ci": "pnpm --recursive test:ci",
        "clean": "pnpm --recursive clean --parallel",
        "build": "ultra --recursive build",
        "lintfix": "pnpm --recursive lintfix --parallel",
        "commit-cli": "cz",
        "reconstruct": "npx rimraf node_modules packages/*/node_modules && npm run setup && echo done"
    },
    "devDependencies": {
        "@commitlint/cli": "15.0.0",
        "@commitlint/config-conventional": "15.0.0",
        "@sindresorhus/slugify": "2.1.0",
        "aws-sdk": "2.1044.0",
        "axios": "0.24.0",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.4.1",
        "husky": "4.3.8",
        "lerna": "4.0.0",
        "mime-types": "2.1.34",
        "prettier": "2.0.5",
        "stylelint": "13.13.1",
        "tsjs": "3.0.2",
        "ultra-runner": "3.10.5",
        "underscore": "1.13.1",
        "walkdir": "0.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lerna run --concurrency 1 --stream precommit",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "stylelint": {
        "extends": [
            "tsjs/stylelint-config"
        ]
    },
    "prettier": "tsjs/prettier-config",
    "browserslist": [
        "cover 90%",
        "last 1 versions",
        "IE 11",
        "not dead"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
