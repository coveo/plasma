{
    "version": "27.0.6",
    "packages": [
        "packages/*"
    ],
    "command": {
        "publish": {
            "conventionalCommits": true,
            "allowBranch": [
                "master",
                "next",
                "release-*"
            ]
        },
        "version": {
            "conventionalCommits": true,
            "message": "chore(release): [version bump] - %s"
        },
        "bootstrap": {
            "hoist": true,
            "nohoist": [
                "unidiff",
                "query-string",
                "strict-uri-encode",
                "split-on-first"
            ]
        }
    }
}
